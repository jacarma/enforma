{
  "name": "enforma-root",
  "private": true,
  "scripts": {
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "build": "pnpm -r --filter './packages/*' build",
    "dev": "pnpm --filter demo dev",
    "typecheck": "pnpm -r typecheck",
    "typecheck:watch": "pnpm -r --parallel typecheck:watch"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1"
  }
}
